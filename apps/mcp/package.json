{
	"name": "@beggy/mcp",
	"version": "1.0.0",
	"private": true,
	"description": "Beggy MCP Server - Model Context Protocol tools for automated development tasks including TypeScript conversion, component scaffolding, and API testing",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"developer-tools",
		"automation",
		"typescript",
		"code-generation",
		"scaffolding"
	],
	"author": {
		"name": "Mohamed Fathy",
		"email": "your.email@example.com"
	},
	"license": "MIT",
	"type": "module",
	"bin": {
		"beggy-mcp": "./dist/index.js"
	},
	"scripts": {
		"dev": "node --loader @swc-node/register/esm --watch src/index.ts",
		"build": "swc src -d dist --config-file .swcrc",
		"build:watch": "swc src -d dist --config-file .swcrc --watch",
		"start": "node dist/index.js",
		"clean": "rm -rf dist",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@beggy/shared": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"axios": "^1.7.9",
		"dotenv": "^16.4.5",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@swc-node/register": "^1.10.9",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.10.1",
		"@types/express": "^5.0.6",
		"@types/node": "^22.10.2",
		"typescript": "^5.7.2"
	},
	"packageManager": "pnpm@10.24.0",
	"engines": {
		"node": ">=18.0.0"
	}
}
