{
	"name": "@beggy/mcp",
	"version": "1.0.0",
	"description": "Beggy MCP Server - Model Context Protocol tools for automated development tasks including TypeScript conversion, component scaffolding, and API testing",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"claude",
		"anthropic",
		"developer-tools",
		"automation",
		"typescript",
		"code-generation",
		"scaffolding",
		"express",
		"prisma",
		"postgresql",
		"api",
		"beggy",
		"travel",
		"tooling"
	],
	"author": {
		"name": "Mohamed Fathy",
		"email": "mofathy1833@gmail.com",
		"url": "https://github.com/Mofathy183"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mofathy183/Beggy-backend.git",
		"directory": "apps/mcp"
	},
	"bugs": {
		"url": "https://github.com/Mofathy183/Beggy-backend/issues"
	},
	"homepage": "https://github.com/Mofathy183/Beggy-backend#readme",
	"private": true,
	"type": "module",
	"main": "./dist/src/index.js",
	"bin": {
		"beggy-mcp": "./dist/src/index.js"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "swc src -d dist --config-file .swcrc",
		"build:watch": "swc src -d dist --config-file .swcrc --watch",
		"start": "node dist/src/index.js",
		"test:convert": "tsx src/test-tool.ts",
		"clean": "rm -rf dist",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@beggy/shared": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"axios": "^1.7.9",
		"dotenv": "^16.4.5",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@swc-node/register": "^1.10.9",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.10.1",
		"@types/node": "^20.0.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	},
	"packageManager": "pnpm@10.24.0",
	"engines": {
		"node": ">=18.0.0"
	}
}
