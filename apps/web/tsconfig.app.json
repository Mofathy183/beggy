{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		/* React/Vite overrides */
		"types": ["vite/client"],
		"noEmit": true,
		"moduleDetection": "force",
		"jsx": "react-jsx",

		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"@beggy/types": ["../../packages/types/src"],
			"@beggy/types/*": ["../../packages/types/src/*"],
			"@beggy/shared": ["../../packages/shared/src"],
			"@beggy/shared/*": ["../../packages/shared/src/*"]
		}
	},
	"include": ["src"]
}
