{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"types": ["vitest/globals", "node"],
		"baseUrl": ".",
		"paths": {
			//* Global Project related Paths
			"@beggy/shared": ["../../packages/shared/src"],
			"@beggy/shared/*": ["../../packages/shared/src/*"],

			//* ========== API ROOT IMPORTS ==========
			"@/*": ["src/*"],
			"@prisma/*": ["prisma/*"],
			"@prisma": ["prisma"],
			"@route": ["app.route.ts"],
			"@doc": ["docs/swaggerDef.doc"],

			//* ========== SPECIFIC SRC PATHS ==========
			// Direct access to commonly used folders
			"@config": ["src/config/index.ts"],
			"@shared": ["src/shared/index.ts"],
			"@modules": ["src/modules/index.ts"],
			"@emails": ["src/emails/index.ts"],

			// Deep imports with wildcards
			"@config/*": ["src/config/*"],
			"@shared/*": ["src/shared/*"],
			"@modules/*": ["src/modules/*"],
			"@emails/*": ["src/emails/*"],

			//* ========== PRISMA SPECIFIC ==========
			"@prisma-generated/*": ["prisma/generated/prisma/*"]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"prisma/**/*",
		"docs/**/*",
		"app.ts",
		"server.ts",
		"*.config.ts",
		"*.config.mjs"
	],
	"exclude": ["node_modules", "dist"]
}
