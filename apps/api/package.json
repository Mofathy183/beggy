{
	"name": "@beggy/api",
	"version": "1.0.0",
	"description": "Beggy API - RESTful backend API for the Beggy travel packing assistant. Built with Express.js, TypeScript, Prisma, and PostgreSQL. Features user authentication, bag/suitcase management, item organization, and weather integration.",
	"keywords": [
		"api",
		"backend",
		"rest-api",
		"express",
		"typescript",
		"prisma",
		"postgresql",
		"authentication",
		"jwt",
		"oauth",
		"passport",
		"swagger",
		"openapi",
		"beggy",
		"travel",
		"packing",
		"luggage",
		"bags",
		"suitcases",
		"weather",
		"rbac",
		"casl"
	],
	"author": {
		"name": "Mohamed Fathy",
		"email": "mofathy1833@gmail.com",
		"url": "https://github.com/Mofathy183"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mofathy183/Beggy-backend.git",
		"directory": "apps/api"
	},
	"bugs": {
		"url": "https://github.com/Mofathy183/Beggy-backend/issues"
	},
	"homepage": "https://github.com/Mofathy183/Beggy-backend#readme",
	"main": "dist/server.js",
	"type": "module",
	"files": [
		"dist",
		"prisma",
		"README.md"
	],
	"prisma": {
		"schema": "./prisma"
	},
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"test:integration": "pnpm prisma:test && vitest run",
		"test:coverage": "vitest run --coverage",
		"build": "swc src -d dist/src --config-file .swcrc && swc server.ts app.ts -d dist --config-file .swcrc",
		"build:watch": "swc src -d dist --config-file .swcrc --watch",
		"start": "node dist/server.js",
		"dev": "tsx watch server.ts",
		"type-check": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"prisma:push": "pnpm prisma db push",
		"prisma:generate": "pnpm prisma generate",
		"prisma:migrate": "pnpm prisma migrate dev",
		"prisma:deploy": "pnpm prisma migrate deploy",
		"prisma:reset": "pnpm prisma migrate reset",
		"prisma:seed": "tsx prisma/seed.ts",
		"prisma:test": "dotenv -e .env.test -- pnpm prisma migrate deploy"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.6.0",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.3",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/express-flash": "^0.0.5",
		"@types/express-session": "^1.18.2",
		"@types/express-xss-sanitizer": "^2.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.10.1",
		"@types/passport": "^1.0.17",
		"@types/passport-facebook": "^3.0.4",
		"@types/passport-google-oauth20": "^2.0.17",
		"@types/supertest": "^6.0.3",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"dotenv-cli": "^11.0.0",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.4.2",
		"prisma": "^7.3.0",
		"supertest": "^7.1.0",
		"tsx": "^4.21.0"
	},
	"dependencies": {
		"@beggy/shared": "workspace:*",
		"@casl/ability": "^6.7.5",
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"axios": "^1.8.4",
		"bcryptjs": "^3.0.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csrf-csrf": "^4.0.3",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.7",
		"express": "^5.1.0",
		"express-flash": "^0.0.2",
		"express-rate-limit": "^7.5.0",
		"express-sanitizer": "^1.0.6",
		"express-session": "^1.18.1",
		"express-xss-sanitizer": "^2.0.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.3",
		"passport": "^0.7.0",
		"passport-facebook": "^3.0.0",
		"passport-google-oauth20": "^2.0.0",
		"pino": "^9.6.0",
		"pino-http": "^10.4.0",
		"resend": "^4.2.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"zod": "^4.1.13"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
