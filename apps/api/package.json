{
	"name": "@beggy/api",
	"version": "1.0.0",
	"description": "Beggy API - RESTful backend API for the Beggy travel packing assistant. Built with Express.js, TypeScript, Prisma, and PostgreSQL. Features user authentication, bag/suitcase management, item organization, and weather integration.",
	"keywords": [
		"api",
		"backend",
		"rest-api",
		"express",
		"typescript",
		"prisma",
		"postgresql",
		"authentication",
		"jwt",
		"oauth",
		"passport",
		"swagger",
		"openapi",
		"beggy",
		"travel",
		"packing",
		"luggage",
		"bags",
		"suitcases",
		"weather",
		"rbac",
		"casl"
	],
	"author": {
		"name": "Mohamed Fathy",
		"email": "mofathy1833@gmail.com",
		"url": "https://github.com/Mofathy183"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mofathy183/Beggy-backend.git",
		"directory": "apps/api"
	},
	"bugs": {
		"url": "https://github.com/Mofathy183/Beggy-backend/issues"
	},
	"homepage": "https://github.com/Mofathy183/Beggy-backend#readme",
	"main": "dist/server.js",
	"type": "module",
	"files": [
		"dist",
		"prisma",
		"README.md"
	],
	"prisma": {
		"schema": "./prisma"
	},
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --detectOpenHandles",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles",
		"build": "swc src -d dist/src --config-file .swcrc && swc server.ts app.ts -d dist --config-file .swcrc",
		"build:watch": "swc src -d dist --config-file .swcrc --watch",
		"start": "node dist/server.js",
		"dev": "tsx watch server.ts",
		"type-check": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"prisma:push": "pnpm prisma db push",
		"prisma:generate": "pnpm prisma generate",
		"prisma:migrate": "pnpm prisma migrate dev",
		"prisma:deploy": "pnpm prisma migrate deploy",
		"prisma:reset": "pnpm prisma migrate reset",
		"prisma:seed": "tsx prisma/seed.ts"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.6.0",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.3",
		"@types/bcrypt": "^6.0.0",
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/csrf": "^3.1.3",
		"@types/express": "^5.0.6",
		"@types/express-flash": "^0.0.5",
		"@types/express-session": "^1.18.2",
		"@types/express-xss-sanitizer": "^2.0.0",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.10.1",
		"@types/passport": "^1.0.17",
		"@types/passport-facebook": "^3.0.4",
		"@types/passport-google-oauth20": "^2.0.17",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"prisma": "^7.1.0",
		"supertest": "^7.1.0",
		"ts-jest": "^29.4.6",
		"tsx": "^4.21.0"
	},
	"dependencies": {
		"@beggy/types": "workspace:*",
		"@casl/ability": "^6.7.3",
		"@prisma/client": "^7.1.0",
		"axios": "^1.8.4",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.7",
