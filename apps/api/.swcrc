{
	"$schema": "https://swc.rs/schema.json",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"tsx": true,  // Changed to true (you have .tsx files for emails)
			"decorators": true,
			"dynamicImport": true
		},
		"target": "es2022",
		"loose": false,
		"externalHelpers": false,
		"keepClassNames": true,
		"baseUrl": ".",  // Changed from "./src" to "." (MUST match tsconfig!)
		"paths": {
			// MUST match tsconfig.json paths!
			"@/*": ["src/*"],
			"@prisma/*": ["prisma/*"],
			// "@tests/*": ["tests/*"],
			// "@docs/*": ["docs/*"],
			"@beggy/*": ["../../packages/*/src"]
		}
	},
	"module": {
		"type": "commonjs",  // Changed from "es6" to "commonjs" (you're using Node.js/Express)
		"strict": true,
		"strictMode": true,
		"lazy": false,
		"noInterop": false
	},
	"minify": false,
	"sourceMaps": true,
	"inlineSourcesContent": true
}