//* relationship (one to many) each user can have many Suitcases

model Suitcases {
    id    String       @id @default(uuid())
    name  String
    brand String?
    type  SuitcaseType
    color String?      @default("black")
    size  Size

    maxCapacity    Float // L or internal volume (static)
    maxWeight      Float // max allowed weight (static)
    suitcaseWeight Float // weight of empty suitcase (static)

    material  Material?
    features  SuitcaseFeature[]
    wheels    WheelType?
    createdAt DateTime          @default(now()) @map("created_at")
    updatedAt DateTime          @updatedAt @map("updated_at")

    userId String? @map("user_id")
    user   User?   @relation(fields: [userId], references: [id])

    suitcaseItems SuitcaseItems[]

    @@map("suitcases")
}

model SuitcaseItems {
    suitcaseId String @map("suitcase_id")
    itemId     String @map("item_id")

    suitcase Suitcases @relation(fields: [suitcaseId], references: [id], onDelete: Cascade)
    item     Items     @relation(fields: [itemId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@id([suitcaseId, itemId]) // Composite Primary Key
    @@map("suitcase_items") // Table name in DB
}
