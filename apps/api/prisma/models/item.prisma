/// Represents an item that can be packed into bags or suitcases.
///
/// Stores physical characteristics used for capacity and
/// weight calculations, as well as classification metadata.
model Items {
    /// Primary identifier for the item.
    id String @id @default(uuid())

    /// Display name of the item.
    name String

    /// Category used to classify the item.
    category ItemCategory

    /// Quantity of this item.
    /// Represents how many identical units exist.
    quantity Int

    /// Weight value of a single item unit.
    weight Float

    /// Unit used for the item's weight.
    weightUnit WeightUnit @default(KILOGRAM)

    /// Volume value of a single item unit.
    volume Float

    /// Unit used for the item's volume.
    volumeUnit VolumeUnit @default(LITER)

    /// Optional color of the item.
    /// Defaults to black if not specified.
    color String? @default("black")

    /// Indicates whether the item is fragile.
    isFragile Boolean @default(false) @map("is_fragile")

    /// Item creation timestamp.
    createdAt DateTime @default(now()) @map("created_at")

    /// Item update timestamp.
    updatedAt DateTime @updatedAt @map("updated_at")

    /// Identifier of the owning user.
    /// Nullable to allow shared or system-defined items.
    userId String? @map("user_id")

    /// Relation to the owning user.
    user User? @relation(fields: [userId], references: [id])

    /// Bag associations for this item.
    bagItems BagItems[]

    /// Suitcase associations for this item.
    suitcaseItems SuitcaseItems[]

    /// Database table name.
    @@map("items")
}
