/// Represents an item that can be packed into containers.
///
/// Stores physical characteristics used for volume
/// and weight calculations, as well as classification
/// and display metadata.
model Items {
    /// Primary identifier for the item.
    id String @id @default(uuid())

    /// Display name of the item.
    name String

    /// Category used to classify the item.
    category ItemCategory

    /// Weight of a single item unit.
    weight Float

    /// Unit used for the item's weight.
    weightUnit WeightUnit @default(KILOGRAM)

    /// Volume of a single item unit.
    volume Float

    /// Unit used for the item's volume.
    volumeUnit VolumeUnit @default(LITER)

    /// Optional color of the item.
    ///
    /// Defaults to black if not specified.
    color String? @default("black")

    /// Indicates whether the item is fragile.
    isFragile Boolean @default(false) @map("is_fragile")

    /// Item creation timestamp.
    createdAt DateTime @default(now()) @map("created_at")

    /// Item update timestamp.
    updatedAt DateTime @updatedAt @map("updated_at")

    /// Identifier of the owning user.
    ///
    /// Nullable to allow shared or system-defined items.
    userId String? @map("user_id")

    /// Relation to the owning user.
    user User? @relation(fields: [userId], references: [id])

    /// Containers this item is packed into.
    containerItems ContainerItems[]

    /// Database table name.
    @@map("items")
}