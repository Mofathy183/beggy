/// Represents a bag owned by a user.
///
/// Stores identity, appearance, and feature metadata.
/// All physical constraints and packing logic are
/// delegated to the linked container.
model Bags {
    /// Primary identifier for the bag.
    id String @id @default(uuid())

    /// Linked container providing physical constraints.
    containerId String     @unique @map("container_id")
    container   Containers @relation(fields: [containerId], references: [id], onDelete: Cascade)

    /// Display name of the bag.
    name String

    /// Bag type (e.g., backpack, duffel, tote).
    type BagType

    /// Primary color of the bag.
    ///
    /// Defaults to black if not specified.
    color String? @default("black")

    /// Size classification of the bag.
    size Size

    /// Material used to construct the bag.
    material Material?

    /// Optional features supported by the bag.
    features BagFeature[]

    /// Bag creation timestamp.
    createdAt DateTime @default(now()) @map("created_at")

    /// Bag update timestamp.
    updatedAt DateTime @updatedAt @map("updated_at")

    /// Identifier of the owning user.
    ///
    /// Nullable to allow system-created or unassigned bags.
    userId String? @map("user_id")

    /// Relation to the owning user.
    user User? @relation(fields: [userId], references: [id])

    /// Database table name.
    @@map("bags")
}
