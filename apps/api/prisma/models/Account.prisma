//* Important make relationship between User and Account (one to many) 

model Account {
    id         String       @id @default(uuid())
    provider   AuthProvider
    providerId String       @unique @map("provider_id")
    createdAt  DateTime     @default(now()) @map("created_at")
    updatedAt  DateTime     @updatedAt @map("updated_at")

    //* User make relationship between User and Account
    // 1:1 relation
    userId String @unique @map("user_id")
    user   User   @relation(name: "UserAccount", fields: [userId], references: [id])

    //* table name
    @@map("accounts")
}
