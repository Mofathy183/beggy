<mjml>
	<mj-head>
		<mj-attributes>
			<mj-all font-family="Arial, sans-serif" />
			<mj-text font-size="16px" line-height="24px" />
			<mj-button
				font-size="16px"
				padding="14px 28px"
				border-radius="8px"
			/>
		</mj-attributes>
	</mj-head>
	<mj-body background-color="#2a303c">
		<!-- Wrapper -->
		<mj-section background-color="#2a303c" padding="32px 16px">
			<mj-column width="100%">
				<!-- Heading -->
				<mj-text
					align="center"
					color="#f1f2f3"
					font-size="26px"
					font-weight="bold"
					padding="0 0 12px"
				>
					Reset Your Password ğŸ”
				</mj-text>

				<!-- Message -->
				<mj-text align="center" color="#d1d5db" padding="0 0 24px">
					Hi {{firstName}}, you requested to reset your password.
					Click the button below to create a new one.
				</mj-text>

				<!-- CTA -->
				<mj-button
					href="{{resetLink}}"
					background-color="#570df8"
					color="#ffffff"
					font-weight="bold"
				>
					Reset Password
				</mj-button>

				<!-- Tip / Warning -->
				<mj-text
					align="center"
					color="#9ca3af"
					font-size="13px"
					padding-top="24px"
				>
					This link is valid for <strong>15 minutes</strong>. If you
					didnâ€™t request a password reset, you can safely ignore this
					email.
				</mj-text>
			</mj-column>
		</mj-section>
	</mj-body>
</mjml>
