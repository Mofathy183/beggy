{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		// Library mode
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"moduleResolution": "bundler",

		// Output
		"outDir": "./dist",
		"rootDir": "./src",

		// Emit for library
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,

		// Strict for shared code
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"paths": {
			"@/*": ["./packages/shared/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
