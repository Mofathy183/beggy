{
	"name": "@beggy/shared",
	"version": "1.0.0",
	"description": "Beggy Shared Package - TypeScript types, constants, and utility functions shared between frontend and backend",
	"keywords": [
		"typescript",
		"types",
		"shared",
		"utilities",
		"constants",
		"monorepo"
	],
	"author": {
		"name": "Mohamed Fathy",
		"email": "mofathy1833@gmail.com"
	},
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"export": {
		"./constants": {
			"types": "./dist/constants/index.d.ts",
			"import": "./dist/constants/index.js"
		},
		"./containers": {
			"types": "./dist/containers/index.d.ts",
			"import": "./dist/containers/index.js"
		},
		"./schemas": {
			"types": "./dist/schemas/index.d.ts",
			"import": "./dist/schemas/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js"
		}
	},
	"dependencies": {
		"zod": "^4.1.13"
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"type-check": "tsc --noEmit"
	},
	"packageManager": "pnpm@10.24.0"
}
