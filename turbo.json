{
	"$schema": "https://turbo.build/schema.json",

	"ui": "tui",

	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", "build/**", ".next/**"],
			"env": ["NODE_ENV", "DATABASE_URL", "VITE_API_URL"]
		},

		"dev": {
			"cache": false,
			"persistent": true,
			"env": [
				"NODE_ENV",
				"DATABASE_URL",
				"JWT_ACCESS_SECRET",
				"JWT_REFRESH_SECRET",
				"SESSION_SECRET",
				"CSRF_SECRET_KEY",
				"JWT_ACCESS_EXPIRES_IN",
				"JWT_ACCESS_TOKEN_NAME",
				"JWT_REFRESH_EXPIRES_IN",
				"JWT_REFRESH_REMEMBER_EXPIRES_IN",
				"JWT_REFRESH_TOKEN_NAME",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"FACEBOOK_CLIENT_ID",
				"FACEBOOK_CLIENT_SECRET",
				"RESEND_API_KEY",
				"AI_API_KEY",
				"OPENWEATHER_API_KEY"
			]
		},

		"lint": {
			"dependsOn": ["^lint"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.js",
				"src/**/*.jsx",
				"eslint.config.mjs",
				"tsconfig.json"
			],
			"outputs": []
		},

		"lint:fix": {
			"dependsOn": ["^lint:fix"],
			"cache": false,
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.js",
				"src/**/*.jsx"
			],
			"outputs": []
		},

		"type-check": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
			"outputs": []
		},

		"test": {
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"**/*.test.ts",
				"**/*.test.tsx",
				"**/*.spec.ts",
				"**/*.spec.tsx"
			],
			"outputs": [],
			"env": [
				"NODE_ENV",
				"DATABASE_URL",

				"JWT_ACCESS_SECRET",
				"JWT_REFRESH_SECRET",

				"SESSION_SECRET",
				"CSRF_SECRET_KEY",

				"JWT_ACCESS_EXPIRES_IN",
				"JWT_ACCESS_TOKEN_NAME",
				"JWT_REFRESH_EXPIRES_IN",
				"JWT_REFRESH_REMEMBER_EXPIRES_IN",
				"JWT_REFRESH_TOKEN_NAME",

				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",

				"FACEBOOK_CLIENT_ID",
				"FACEBOOK_CLIENT_SECRET",

				"RESEND_API_KEY",

				"AI_API_KEY",

				"OPENWEATHER_API_KEY"
			]
		},

		"test:coverage": {
			"cache": false,
			"outputs": ["coverage/**"]
		},

		"clean": {
			"cache": false
		},

		"prisma:generate": {
			"cache": false,
			"outputs": ["node_modules/.prisma/**"]
		},

		"prisma:migrate": {
			"cache": false,
			"env": ["DATABASE_URL"]
		},

		"prisma:studio": {
			"cache": false,
			"persistent": true,
			"env": ["DATABASE_URL"]
		}
	},

	"globalEnv": ["NODE_ENV", "CI"],

	"globalDependencies": [
		"**/.env.*local",
		"**/.env",
		".eslintrc.js",
		"eslint.config.mjs",
		"tsconfig.json",
		"turbo.json"
	]
}
