{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
        "cache": false,
        "persistent": true
        },
        "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", "build/**"],
        "cache": true
        },
        "lint": {
        "outputs": []
        },
        "lint:fix": {
        "dependsOn": ["lint"],
        "outputs": []
        },
        "type-check": {
        "outputs": []
        },
        "test": {
        "dependsOn": ["build"],
        "outputs": ["coverage/**"]
        },
        "test:coverage": {
        "dependsOn": ["test"],
        "outputs": ["coverage/**"]
        },
        "clean": {
        "cache": false,
        "outputs": []
        }
    }
}
